       </copy>
       <copy tofile="${jbossas.target.dir}/gatein/extensions/gatein-sample-portal.ear/rest-sample-portal.war" >
          <fileset refid="org.gatein.portal:exo.portal.sample.portal.rest-war:war"/>
       </copy>
