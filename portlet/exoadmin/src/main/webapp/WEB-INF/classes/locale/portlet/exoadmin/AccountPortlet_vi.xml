<bundle>
  <!--
  ##org.exoplatform.account.webui.component.UIAccountForm
  -->
  <UIAccountForm>
    <label>
      <Profile>Thông tin Người dùng</Profile>
      <username>#{word.userName}:</username>
      <SearchUser>Tìm kiếm người dùng</SearchUser>
      <password1x>Mật khẩu:</password1x>
      <password2x>Xác nhận mật khẩu:</password2x>
      <password>Mật khẩu:</password>
      <Confirmpassword>Xác nhận mật khẩu:</Confirmpassword>
      <firstName>#{word.firstName}:</firstName>
      <lastName>#{word.lastName}:</lastName>
      <email>Hộp thư:</email>
      <note><![CDATA[Các trường có đánh dấu<span style="color: red">*</span> là trường bắt buộc]]></note>
      <action>
        <SearchUser>Kiểm tra sự tồn tại</SearchUser>
      </action>
      <Membership>Thành viên</Membership>
      <option>
        <male>Nam</male>
        <female>Nữ</female>
      </option>
      <HomeInfo>Thông tin trang chủ</HomeInfo>
      <user>
        <name>
          <given>#{word.givenName}:</given>
          <family>#{word.familyName}:</family>
          <nickName>#{word.nickName}:</nickName>
        </name>
        <bdate>#{word.birthday}:</bdate>
        <gender>#{word.gender}:</gender>
        <employer>#{word.employer}:</employer>
        <department>#{word.department}:</department>
        <jobtitle>#{word.jobTitle}:</jobtitle>
        <language>Ngôn ngữ:</language>
        <home-info>
          <postal>
            <name>#:</name>
            <street>#{word.street}:</street>
            <city>#{word.city}:</city>
            <stateprov>#{word.stateProv}:</stateprov>
            <postalcode>#{word.postalCode}:</postalcode>
            <country>#{word.country}:</country>
          </postal>
          <telecom>
            <mobile>
              <number>#{word.mobile}:</number>
            </mobile>
            <telephone>
              <number>#{word.tel}:</number>
            </telephone>
          </telecom>
          <online>
            <email>#{word.email}:</email>
            <uri>#{word.website}:</uri>
          </online>
        </home-info>
        <business-info>
          <postal>
            <name>#:</name>
            <street>#{word.street}:</street>
            <city>#{word.city}:</city>
            <stateprov>#{word.stateProv}:</stateprov>
            <postalcode>#{word.postalCode}:</postalcode>
            <country>#{word.country}:</country>
          </postal>
          <telecom>
            <mobile>
              <number>#{word.mobile}:</number>
            </mobile>
            <telephone>
              <number>#{word.tel}:</number>
            </telephone>
          </telecom>
          <online>
            <email>#{word.email}:</email>
            <uri>#{word.website}:</uri>
          </online>
        </business-info>
      </user>
      <BusinessInfo>Thông tin doanh nghiệp</BusinessInfo>
    </label>
    <title>Thêm / Chỉnh sửa tài khoản</title>
    <action>
      <Reset>Làm lại</Reset>
      <Back>#{word.back}</Back>
      <Save>#{word.save}</Save>
    </action>
    <msg>
      <user-exist>Tên người dùng '{0}' đã được sử dụng</user-exist>
      <incorrect-password>Hãy nhập lại mật khẩu</incorrect-password>
      <sucsesful>
        <create>
          <user>Tạo người dùng thành công</user>
        </create>
      </sucsesful>
    </msg>
    <tab>
      <label>
        <AccountTemplate>Mẫu tài khoản</AccountTemplate>
        <UIUserProfileInputSet>Thông tin Người dùng</UIUserProfileInputSet>
        <AccountInputSet>Thông tin Tài khoản</AccountInputSet>
        <UIUserMembershipSelector>Người dùng thành viên</UIUserMembershipSelector>
      </label>
    </tab>
  </UIAccountForm>
  <!--
  #{0} is the username that the remote user enter
  -->
  <UIPopupWindow>
    <title>
      <UIGroupMembershipSelector>Chọn người dùng thành viên</UIGroupMembershipSelector>
    </title>
  </UIPopupWindow>
  <UISiteManagement>
  	<action>
  		<addNewPortal>Tạo Portal</addNewPortal>
  	</action>
  </UISiteManagement>
</bundle>

