  <build>
    <plugins>

      <!-- Precompile the template class in maven (this is optional) -->
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <sources>
                <fileset>
                  <directory>${project.build.outputDirectory}</directory>
                  <includes>
                    <include>**/*.groovy</include>
                  </includes>
                </fileset>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Use always for redeploying a new portal for each TestCase -->
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.14.1</version>
        <configuration>
          <reuseForks>false</reuseForks>
          <systemProperties>
            <property>
              <name>java.security.auth.login.config</name>
              <value>${basedir}/src/main/tomcatconf/jaas.conf</value>
            </property>
          </systemProperties>
        </configuration>
      </plugin>

    </plugins>
  </build>

