<gatein-resources
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   	xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_resources_1_2_1 http://www.gatein.org/xml/ns/gatein_resources_1_2_1"
   	xmlns="http://www.gatein.org/xml/ns/gatein_resources_1_2_1">

   <portal-skin>
      <skin-name>Default</skin-name>
      <skin-module>Highlight</skin-module>
      <css-path>/highlight/highlight.css</css-path>
   </portal-skin>

   <portlet-skin>
      <application-name>amd-js</application-name>
      <portlet-name>RequireJSPluginPortlet</portlet-name>
      <skin-name>Default</skin-name>
      <css-path>/assets/skin/RequireJSPluginPortlet/DefaultStylesheet.css</css-path>
   </portlet-skin>

   <portlet>
     <name>RequireJSPluginPortlet</name>
     <module>
       <script>
         <name>twitterBootstrap</name>
         <path>/assets/js/bootstrap/bootstrap.js</path>
       </script>
       <depends>
         <module>jquery</module>
       </depends>
     </module>
   </portlet>
   
   <portlet>
     <name>CommonJSPortlet</name>
     <module>
       <script>
         <name>starter</name>
         <path>/commonjs/starter.js</path>
       </script>
       <depends>
         <module>require</module>
       </depends>
       <depends>
         <module>jquery</module>
       </depends>
       <depends>
         <module>increment</module>
       </depends>
     </module>
   </portlet>
   
   <module>
      <name>math</name>
      <script>
         <name>commonjs.math</name>
         <path>/commonjs/math.js</path>
       </script>
      <depends>
         <module>require</module>
       </depends>
       <depends>
         <module>exports</module>
       </depends>
       <depends>
         <module>modules</module>
       </depends>
   </module>

   <module>
      <name>increment</name>
      <script>
         <name>commonjs.increment</name>
         <path>/commonjs/increment.js</path>
       </script>
       <depends>
         <module>require</module>
       </depends>
       <depends>
         <module>exports</module>
       </depends>
       <depends>
         <module>modules</module>
       </depends>
       <depends>
         <module>math</module>
       </depends>
   </module>
  
   <module>
      <name>text</name>     
      <native-script>/assets/js/plugins/text.js</native-script>
   </module>
   
   <module>
      <name>mustache</name>     
      <native-script>/assets/js/plugins/mustache.js</native-script>
   </module>
   
   <module>
      <name>foo</name>     
      <script>
         <name>foo</name>
         <path>/assets/js/foo.js</path>
      </script>
   </module>

   <module>
      <name>jquery-plugin</name>     
      <script>
         <name>jquery-plugin</name>
         <path>/sample2/jquery-plugin.js</path>
      </script>
      <depends>
        <module>jquery</module>
        <as>jQuery</as>
      </depends>
   </module>

   <module>
      <name>highlight</name>     
      <script>
         <name>highlight</name>
         <path>/highlight/highlight.js</path>
      </script>
      <depends>
        <module>jquery</module>
        <as>jQuery</as>
      </depends>
   </module>   

</gatein-resources>

