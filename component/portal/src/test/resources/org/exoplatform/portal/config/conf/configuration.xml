                <value>
                  <string>test/normalized</string>
                </value>
                <value>
                  <string>organization/management/executive-board</string>
                </value>
              </collection>
            </field>
            <field name="ownerType">
              <string>group</string>
            </field>
            <field name="templateLocation">
              <string>classpath:/org/exoplatform/portal/config/conf</string>
            </field>
          </object>
        </object-param>
