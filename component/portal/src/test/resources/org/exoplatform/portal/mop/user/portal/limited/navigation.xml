<node-navigation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_7 http://www.gatein.org/xml/ns/gatein_objects_1_7"
                 xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_7">
  <priority>1</priority>
  <page-nodes>

    <!-- Node with /platform/administrator permission -->
    <node>
      <uri>foo</uri>
      <name>foo</name>
      <page-reference>portal::limited::foo</page-reference>
    </node>

    <!-- Node SYSTEM with /platform/user permission -->
    <node>
      <uri>bar</uri>
      <name>bar</name>
      <visibility>SYSTEM</visibility>
      <page-reference>portal::limited::bar</page-reference>
    </node>

    <!-- Node with everyone permission -->
    <node>
      <uri>bit</uri>
      <name>bit</name>
      <page-reference>portal::limited::bit</page-reference>
    </node>
  </page-nodes>
</node-navigation>
