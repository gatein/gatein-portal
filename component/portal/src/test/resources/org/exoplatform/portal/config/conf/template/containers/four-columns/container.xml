    </gadget-application>
  </container>

  <container template="classpath:groovy/dashboard/webui/component/UIContainer.gtmpl">
    <gadget-application>
      <gadget>
        <gadget-ref>Todo</gadget-ref>
      </gadget>
      <access-permissions>Everyone</access-permissions>
      <show-info-bar>true</show-info-bar>
    </gadget-application>
  </container>

  <container template="classpath:groovy/dashboard/webui/component/UIContainer.gtmpl">
