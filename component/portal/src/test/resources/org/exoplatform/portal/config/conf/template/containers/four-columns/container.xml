           xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_7"
           template="classpath:groovy/dashboard/webui/component/UIColumnContainer.gtmpl">

  <container template="classpath:groovy/dashboard/webui/component/UIContainer.gtmpl">
